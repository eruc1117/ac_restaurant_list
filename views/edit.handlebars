<h1>修改餐廳資料</h1>

<div class="edit-container">
  <form action="/restaurants/edit/{{ restaurant.id }}?_method=PUT" method="POST">
    <div class="input-block">
      <label for="restaurantName">Name</label>
      <input type="text" id="restaurantName" name="name" value="{{restaurant.name}} " required>
    </div>
    <div class="input-block">
      <label for="restaurantName_en">English Name</label>
      <input type="text" id="restaurantName_en" name="name_en" value="{{restaurant.name_en}}" required>
    </div>
    <div class="input-block">
      <label for="category">Category</label>
      <input type="text" id="
    </div>category" name="category" value="{{restaurant.category}}" required>
    </div>
    <div class="input-block">
      <label for="image">Image</label>
      <input type="text" id="image" name="image" value="{{restaurant.image}}" required>
      <small>這邊只能用網址啦</small>
      <!--增加圖片預覽-->
      <img src="{{restaurant.image}}" id="preview" alt="你打錯了">
      <button type="button" id="previewButton">預覽</button>
    </div>
    <div class="input-block">
      <label for="location">Location</label>
      <input type="text" id="location" name="location" value="{{restaurant.location}}" required>
    </div>
    <div class="input-block">
      <label for="phone">Phone</label>
      <input type="tel" id="phone" name="phone" value="{{restaurant.phone}}" pattern="[0-9]{2}-[0-9]{4}-[0-9]{4}"
        required>
      <!--決定電話號碼格式-->
      <small>格式:xx-xxxx-xxxx</small>
    </div>
    <div class="input-block">
      <label for="googleMap">GoogleMap</label>
      <input type="text" id="googleMap" name="google_map" value="{{restaurant.google_map}}" required>
    </div>
    <div class="input-block">
      <label for="customRange3">Rating</label>
      <div class="edit-me" id="rating">{{restaurant.rating}}</div>
      <input type="range" class="custom-range" id="ratingRange" name="rating" value="{{restaurant.rating}}" min=0 max=5
        step=0.1>
      <!--增加數字顯示-->
    </div>
    <div class="input-block">
      <label for="restaurantDescription">Description</label>
      <input type="text" id="restaurantDescription" id="exampleFormControlTextarea1" name="description"
        value="{{restaurant.description}}" required>
      <!--原本要用<textarea>，不過<textarea>不支援input-->
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a href="/">Home</a>
  </form>
</div>

<script src="/javascripts/frontEnd.js"></script>