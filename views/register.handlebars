<div class="wrap mt-5 mx-auto border border-dark border-5 w-50">
  <h1 class="text-center">
    Register
  </h1>
  <form action="/user/register" method="post">
    <div class="login mt-5 mx-auto ">
      <div class="d-flex flex-column">
        <label class="mx-auto" for="user">User Name</label>
        <input type="text" class="mb-4 w-75 mx-auto" placeholder="User Name" name="name" value="{{userInfo.name}}"
          aria-label=" User email" id="user">
        <label class="mx-auto" for="user">User Email</label>
        <input type="text" class="mb-4 w-75 mx-auto" placeholder="User email" aria-label="User email" name="email"
          value="{{userInfo.email}}" required>
        <label class="mx-auto" for="password">Password</label>
        <input type="text" class=" mb-4 w-75 mx-auto" placeholder="Password" aria-label="User Password" name="password"
          id="password" required>
        <label class="mx-auto" for="confirmPassword">Confirm Password</label>
        <input type="text" class=" mb-5 w-75 mx-auto" placeholder="Confirm Password" aria-label="User Password "
          name="confirmPassword" id="confirmPassword" required>
        <p id="differetPassword"></p>
      </div>
    </div>
    <p class="lead mt-4 text-center">
      Have An Account? <a href="/user/login">Login</a>
    </p>
    <!-- 如果密碼不同時是否直接將按鈕無效化 -->
    <div class="d-flex justify-content-center" id="cantrip">
      <button type="submit" class="btn btn-dark w-50 mb-2" id="register">Register</button>
    </div>
    <div class="d-flex justify-content-center">
      <a href="/auth/facebook" class="btn btn-info btn-block w-50  mb-2">Facebook Login</a>
    </div>
  </form>
</div>

<script src="/javascripts/register.js"></script>